@model SampleCRUD.Models.Users

@{
    ViewBag.Title = "Create employee"; 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Edit Employee</div>
        <table class="table">
            <tr>
                <td>Name</td>
                <td>
                    @Html.TextBoxFor(model => model.Name, new {@class="form-control",style="width:350px"})
                    @Html.ValidationMessageFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td>Department</td>
                <td>
                    @Html.TextBoxFor(model => model.Department, new {@class="form-control",style="width:350px"})
                    @Html.ValidationMessageFor(model => model.Department)
                </td>
            </tr>
        </table>
    </div>
        <p>
            <input type="submit" value="Create" class="btn btn-default" />
        </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
